    <div class="container">
        <h1>URL Shortener</h1>
        <div >
            <input required type="url" name="fullUrl" id="fullUrl"  placeholder="url">
            <input required type="text" name="shortUrl" id="shortUrl"  placeholder="shorturl">
            <button type="button" onclick="submitForm(this)">Submit</button>
        </div>
    
        <script>
        function submitForm(e) {
            // try {
            const full = document.querySelector('#fullUrl').value
            const short = document.querySelector('#shortUrl').value
            if (!full || !short) {
                return
            }
            const data = {
                full,
                short,
                clicks: 0
            }
                fetch('/api/shortUrls', {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(data), // body data type must match "Content-Type" header
                }).then(async (response) => {
                    if (response.ok) {
                        window.location.href = "/";
                    }
                    else if(response.status){
                        alert('This Short URL is Already Exist !')
                    }
                    else{
                    }
                }).catch((error) => {
                    alert('WARNING!')
                    console.log(error);
                });
        }
        </script>
    </div>
