<script type="text/javascript" src="../../../public/js/bioFunctions.js"></script>
<div class="form-youtube" style="display: none;">
<!-- <div class="form-youtube"> -->
    <h4>YouTube Video URL</h4>
    <div class="mb-3">
        <input required type="url" name="destination" id="youtubeUrl"  placeholder="ex. https://www.youtube.com/embed/id" class="form-control fullUrl" value="<%= data.full %>" oninput="getYoutube(this)">
        <div class="alert alert-danger form-control mt-3" role="alert" id="alertYoutube" style="display: none;">
            Enter a valid YouTube URL
        </div>
    </div>
    <div class="row g-0">
        <div class="col-md-3" style="align-items: center; text-align: center; background-color: lightgrey; height: 100px; border-radius: 5px;" id="youtubePlaceHolder">
            <div style="padding-top: 22px;">
                <span class="video-placeholder">
                    <svg width="3rem" height="3rem" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" >
                        <path d="M47.044 12.3709C46.7726 11.3498 46.2378 10.4178 45.493 9.66825C44.7483 8.91872 43.8197 8.37794 42.8003 8.10003C39.0476 7.09094 24.0476 7.09094 24.0476 7.09094C24.0476 7.09094 9.04761 7.09094 5.29488 8.10003C4.27547 8.37794 3.34693 8.91872 2.60218 9.66825C1.85744 10.4178 1.32262 11.3498 1.05124 12.3709C0.0476075 16.14 0.0476074 24 0.0476074 24C0.0476074 24 0.0476075 31.86 1.05124 35.6291C1.32262 36.6503 1.85744 37.5823 2.60218 38.3318C3.34693 39.0813 4.27547 39.6221 5.29488 39.9C9.04761 40.9091 24.0476 40.9091 24.0476 40.9091C24.0476 40.9091 39.0476 40.9091 42.8003 39.9C43.8197 39.6221 44.7483 39.0813 45.493 38.3318C46.2378 37.5823 46.7726 36.6503 47.044 35.6291C48.0476 31.86 48.0476 24 48.0476 24C48.0476 24 48.0476 16.14 47.044 12.3709Z" fill="#FF0302"></path>
                        <path d="M19.1385 31.1373V16.8628L31.684 24.0001L19.1385 31.1373Z" fill="#FEFEFE"></path>
                    </svg>
                </span>
            </div>            
        </div>
        <div class="col-md-8">
            <div class="ps-3" id="youtubeTitle">
                <p style="padding-top: 35px;">Add a YouTube URL above to preview the video</p>
            </div>
        </div>
    </div>
    
    <div class="d-flex flex-row-reverse mt-3">
        <button type="button" onclick="btnAddUrl(this)" class="btn btn-primary ms-3" value="youtube">Submit</button>
        <button id="btnSaveUrl" type="button" onclick="btnEditUrl(this)" class="btn btn-primary ms-3" style="display: none;" value="youtube">Save</button>
        <button type="button" onclick="btnCancel(this)" class="btn btn-danger" value="youtube">Cancel</button>
    </div>
</div>